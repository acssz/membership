# Copy this file to `.env` and adjust values before running docker-compose.

# Database settings (match docker-compose defaults)
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/membership
SPRING_DATASOURCE_USERNAME=membership
SPRING_DATASOURCE_PASSWORD=membership

# authentik OIDC settings
AUTHENTIK_ISSUER=https://auth.acssz.org/application/o/membership-card/
AUTHENTIK_CLIENT_ID=membership-card
AUTHENTIK_CLIENT_SECRET=change-me

# S3
STUDENT_ID_STORAGE_BUCKET=foobar
STUDENT_ID_STORAGE_ENDPOINT=https://storage.googleapis.com
STUDENT_ID_STORAGE_REGION=auto
STUDENT_ID_STORAGE_ACCESS_KEY=your-access-key
STUDENT_ID_STORAGE_SECRET_KEY=your-secret-key
STUDENT_ID_STORAGE_PREFIX=membership-card
